<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_box="all"
        tools:ignore="MissingPrefix">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sendmessageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_start"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="5pt"
                    />

                <TextView
                    android:id="@+id/deviceconnectionStatusTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:text="@string/mobile_device_is_connected"
                    android:textSize="10sp"
                    android:visibility="visible"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/accel_val_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accel_val_x"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/accel_val_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accel_val_y"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/accel_val_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accel_val_z"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/gyro_val_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gyroscope_val_x"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/gyro_val_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gyroscope_val_y"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/gyro_val_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gyroscope_val_z"
                    android:layout_gravity="center"/>


                <ScrollView
                    android:id="@+id/statusScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="225dp">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:text="@string/status"
                        tools:ignore="SmallSp"/>
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>


    </FrameLayout>






</androidx.wear.widget.BoxInsetLayout>